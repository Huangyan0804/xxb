<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:padding="30dp">

    <TextView
        android:id="@+id/tv_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="登录"
        android:textColor="@color/colorBlack44"
        android:textSize="30sp" />

    <RelativeLayout
        android:id="@+id/rl_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/tv_login">

        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@mipmap/icon_user"
            android:drawablePadding="15dp"
            android:hint="手机号"
            android:inputType="number"
            android:maxLines="1"
            android:paddingEnd="30dp"
            android:textColorHint="@color/colorGrayHint"
            android:theme="@style/MyEditText" />

        <ImageView
            android:id="@+id/iv_input_delete"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/et_username"
            android:layout_marginEnd="10dp"
            android:visibility="invisible"
            android:src="@mipmap/input_delete_icon" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_username"
        android:layout_marginTop="15dp"
        android:id="@+id/rl_phone_code">
    <EditText
        android:id="@+id/et_phone_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@mipmap/icon_password"
        android:drawablePadding="15dp"
        android:hint="密码"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingEnd="30dp"
        android:textColorHint="@color/colorGrayHint"
        android:theme="@style/MyEditText" />

        <ImageView
            android:id="@+id/iv_pass_visibility"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerVertical="true"
            android:layout_alignEnd="@+id/et_phone_code"
            android:layout_marginEnd="10dp"
            android:src="@mipmap/eye_close" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_request_phone_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_phone_code"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:text="忘记密码 ?"
        android:textColor="@color/colorPrimaryText"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/tv_request_phone_code"
        android:layout_marginTop="30dp"
        android:background="@drawable/bg_btn"
        android:text="登录"
        android:textColor="@color/colorWhite" />

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_login"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:text="新用户注册"
        android:textColor="@color/colorPrimaryText"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_phone_code_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_login"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:text="手机验证码登录"
        android:textColor="@color/colorPrimaryText"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/iv_qr_code"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/tv_phone_code_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:background="@color/colorWhite" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:text="其他方式登录" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="账号仅用于超星学习通验证,请放心登录~~~"
        android:textSize="12sp" />


</RelativeLayout>